<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/relativeLayout_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/textView_invitation_state"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView_photo_url"
                android:layout_width="@dimen/pro_pic_size"
                android:layout_height="@dimen/pro_pic_size"
                android:src="@drawable/profile_pic" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/imageView_photo_url"
                android:text="名字" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textView_paid_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0/100"
                android:textSize="@dimen/font_size_headline" />

        </RelativeLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout_main">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remind" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_settle_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settle_up" />

        </android.support.v7.widget.LinearLayoutCompat>

    </RelativeLayout>

</android.support.v7.widget.CardView>